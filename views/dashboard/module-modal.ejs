<div class="modal fade" id="moduleModal" tabindex="-1" role="dialog" aria-labelledby="modalModuleTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modal-title">Módulo</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <form id="form-module" action="/module/insert" method="POST">
            <div class="form-group">
              <label>Nome</label>
              <input type="email" class="form-control" id="moduleNameForm" placeholder="Nome do modulo">
              <input hidden id="moduleIdForm">
            </div>
            <div class="form-group">
              <label>Descrição</label>
              <input type="text" class="form-control" id="moduleDescForm" placeholder="Descricao do modulo">
            </div>
            <div class="form-group">
              <label>Link</label>
              <input type="text" class="form-control" id="moduleLinkForm" placeholder="Ex.: /<nome do modulo>">
            </div>
        </form>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
        <button type="submit" class="btn btn-primary add" onclick="modules.add()" >Salvar</button>
      </div>
    </div>
  </div>
</div>